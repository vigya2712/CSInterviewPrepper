<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.vigya.csinterviewprepper.QuestionDetailsActivity">

    <com.cengalabs.flatui.views.FlatTextView
        android:id="@+id/txtQuestionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/question_title_text_size"
        android:layout_marginBottom="@dimen/question_title_margin_bottom"
        flatui:textColor="main"
        flatui:theme="Grass"
        flatui:fieldStyle="flat"
        flatui:fontWeight="bold"
        />

    <com.cengalabs.flatui.views.FlatTextView
        android:id="@+id/txtQuestionDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/question_details_text_size"
        flatui:textColor="main"
        flatui:theme="Grass"
        flatui:fieldStyle="flat"
        />

    <com.cengalabs.flatui.views.FlatButton
        android:id="@+id/btnGoToQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/go_to_question"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/category_text_size"
        flatui:textColor="main"
        flatui:theme="Grass"
        flatui:fieldStyle="flat"
        />

</LinearLayout>
